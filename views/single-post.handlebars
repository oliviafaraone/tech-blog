{{#each posts as |post|}}
  <li>
    <article class="post">
  <div class="title">
    <a href="{{post.post_con}}" target="_blank">{{post.title}}</a>
    <span>({{post.post_con}})</span>
  </div>
  <div class="meta">
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>
  </li>
  {{/each}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each this}}
  <section class="comment">

    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>


{{#if loggedIn}}
<script src="/comment.js"></script>
{{/if}}
